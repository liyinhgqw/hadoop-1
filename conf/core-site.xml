<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
<property>
  <name>hadoop.tmp.dir</name>
  <value>/scratch/hadoop-liyin/${user.name}</value>
</property>

<property>
  <name>fs.default.name</name>
  <value>hdfs://beaker-2/</value>
</property>

<property>
  <name>fs.inmemory.size.mb</name>
  <value>128</value>
</property>

<property>
  <name>dfs.client.read.shortcircuit</name>
  <value>true</value>
</property>

<property>
  <name>dfs.client.read.skipchecksum</name>
  <value>true</value>
</property>
</configuration>
